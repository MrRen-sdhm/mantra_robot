<?xml version="1.0"?>
<launch>
  <arg name="paused" default="false"/>
  <arg name="gazebo_gui" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <!-- <arg name="urdf_path" default="$(find mantra_with_gripper_description)/urdf/mantra_with_gripper_description.urdf"/> -->
  <!-- 须使用带有transmission的urdf文件，可使用moveit setup assistant生成 -->
  <arg name="urdf_path" default="$(find mantra_with_gripper_gazebo)/urdf/mantra_with_gripper_description.urdf"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find mantra_with_gripper_gazebo)/worlds/mantra.world"/> -->
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- send robot urdf to param server -->
  <!-- <param name="robot_description" textfile="$(arg urdf_path)" /> -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find mantra_with_gripper_gazebo)/urdf/mantra_with_gripper_description.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model mantra_with_gripper -x 0 -y 0 -z 0"
    respawn="false" output="screen" />
</launch>
