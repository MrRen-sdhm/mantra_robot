<?xml version="1.0"?>

<launch>
    <arg name="fake" default="false" />

    <!-- start the Realsense and gpd_pointnet node -->
    <include file="$(find gpd_ros)/launch/gpd_pointnet_realsense_server.launch" >
        <arg name="rviz" value="false" />
    </include>

    <!-- start the robot-->
    <include file="$(find mantra_application)/launch/mantra_bringup.launch" >
        <arg name="fake" value="$(arg fake)" />
        <arg name="rviz" value="false" />
        <arg name="hmi" value="true" />
    </include>
    
    <!-- publish tf frome ee_link frame to camera_color_optical frame-->
    <include file="$(find mantra_application)/calibration/launch/publish_static_tf.launch" />

    <!-- start gripper driver -->
    <node name="yinshi_driver" pkg="yinshi_driver" type="yinshi_driver" respawn="true" output="screen" />

    <!-- start the rviz -->
    <node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false" args="-d $(find mantra_application)/launch/mantra_pickup_gpd.rviz" output="screen" />

</launch>
